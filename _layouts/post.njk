---
layout: base.njk
---

<article class="prose sm:prose-lg prose-headings:font-nunito marker:text-current" data-pagefind-body>

  <header class="pt-16 pb-16 not-prose">
    <h1 class="text-3xl sm:text-4xl font-bold font-nunito text-[var(--color-accent)]">{{ title }}</h1>
    {%- if "snapshot" in tags %}
      <p class="mt-6 text-sm">{{ promotion }} {{ show }} &middot; <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate("LLLL dd, yyyy") }}</time></p>
    {%- else %}
      <p class="mt-6 text-sm"><span class="font-bold">{{ author }}</span> on <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate("LLLL dd, yyyy") }}</time></p>
    {%- endif %}
  </header>

  {%- if images %}
    {% for image in images %}
      <img src="{{ image.src }}" alt="{{ image.alt }}" width="640px">
    {% endfor %}
  {%- endif %}

  {{ content | safe }}


  <aside class="mt-16 py-8 border-t border-dashed border-[var(--color-decor)]">
    <ul class="flex flex-wrap gap-x-3 gap-y-5 not-prose">
      {%- for tag in tags | filterTagList | sort %}
      {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
      <li><a href="{{ tagUrl }}" class="tag">{{ tag }}</a></li>
      {%- endfor %}
    </ul>
  </aside>

</article>

<footer class="mb-16">

  {%- if collections.posts %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem %}
  {%- set nextPost = collections.posts | getNextCollectionItem %}
  {%- if nextPost or previousPost %}
  <ul class="grid grid-cols-2 p-2 gap-2 text-sm font-bold rounded-md divide-x border border-[var(--color-decor)] divide-[var(--color-decor)]">
    <li>{%- if previousPost %}<a class="hover:underline" href="{{ previousPost.url }}"><span class="font-normal text-xs">← Older</span><br>{{ previousPost.data.title }}</a>{% endif %}</li>
    <li class="text-right">{%- if nextPost %}<a class="hover:underline" href="{{ nextPost.url }}"><span class="font-normal text-xs">Newer →</span><br>{{ nextPost.data.title }}</a>{% endif %}</li>
  </ul>
  {%- endif %}
  {%- endif %}

</footer>