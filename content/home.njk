---js
const eleventyNavigation = {
	key: "Home",
	order: 1
};
const permalink = "/";
const numberOfLatestPostsToShow = 2;
---
<h1 class="mb-0 text-center font-nunito font-black">{{metadata.title}}</h1>
{% set postsCount = collections.posts | length %}
{% set latestPostsCount = postsCount | min(numberOfLatestPostsToShow) %}
{# <h1>Latest {{ latestPostsCount }} Post{% if latestPostsCount != 1 %}s{% endif %}</h1> #}

{% set postslist = collections.posts | head(-1 * numberOfLatestPostsToShow) %}
{% set postslistCounter = postsCount %}
{% include "poststeasers.njk" %}

{% set morePosts = postsCount - numberOfLatestPostsToShow %}
{% if morePosts > 0 %}
<p class="border-dashed border-t pt-2 mt-8 mb-8">{{ morePosts }} more post{% if morePosts != 1 %}s{% endif %} can be found in <a href="blog.njk" class="font-bold hover:underline">the archive</a>.</p>
{% endif %}

