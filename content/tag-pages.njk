---
pagination:
  data: collections
  size: 1
  alias: tag
  filter: 
    - "all"
    - "posts"
permalink: /tags/{{ tag | slugify }}/
eleventyExcludeFromCollections: true
eleventyComputed:
  title: "Posts tagged '{{tag}}'"
---

<h1 class="mt-5 mb-12 text-sm w-full sm:w-auto font-sans">Posts tagged “{{ tag }}”</h1>

<div class="divide-y">
  {% set taglist = collections[ tag ] %}
  {% for post in taglist | reverse %}
    {% include "postTeaser.njk" %}
  {% endfor %}
</div>

<p class="border-t pt-2">See <a href="archive.njk" class="font-bold hover:underline">all tags</a>.</p>
