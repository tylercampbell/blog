{# {% include "listAll.njk" %} #}

<h1 class="visually-hidden">Archive</h1>

<h2 class="h1 mt-16 mb-4">All Tags</h2>

<ul class="flex flex-wrap gap-4">
{% for tag in collections | getKeys | filterTagList %}
  {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
  <li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a></li>
{% endfor %}
</ul>

<h2 class="h1 mt-16 mb-4">All Posts</h2>

{% set postslist = collections.posts %}
<ol class="divide-dashed divide-y">
{%- for post in postslist | reverse %}
  <li class="py-2 flex flex-col sm:flex-row justify-between">
    <a href="{{ post.url }}" class="font-bold hover:underline">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <time class="text-sm" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL dd, yyyy") }}</time>
  </li>
{%- endfor %}
</ol>

