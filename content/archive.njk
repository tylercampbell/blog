<h1 class="sr-only">Archive</h1>

<h2 class="h1 mt-16 mb-4">All Tags</h2>

<ul class="flex flex-wrap gap-4">
{% for tag in collections | getKeys | filterTagList | sort %}
  {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
  <li><a href="{{ tagUrl }}" class="tag">{{ tag }}</a></li>
{% endfor %}
</ul>

<h2 class="h1 mt-16 mb-4">All Posts</h2>

{% set postslist = collections.posts %}
<ol class="divide-dashed divide-y divide-[var(--color-decor)]">
{%- for post in postslist | reverse %}
  <li class="flex flex-col  sm:flex-row py-4 gap-y-1 justify-between">
    <a href="{{ post.url }}" class="font-bold hover:underline text-[var(--color-accent)]">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <time class="text-sm text-nowrap" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL dd, yyyy") }}</time>
  </li>
{%- endfor %}
</ol>

