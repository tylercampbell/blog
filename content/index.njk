---
eleventyNavigation:
  key: Home
  order: 1
pagination:
  data: collections.posts
  size: 2  # Show 2 posts per page
  reverse: true  # Sort from newest to oldest
  alias: posts
  generatePageOnEmptyData: false
permalink: "{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}/{% else %}{% endif %}index.html"
---
<h1 class="pb-8 mb-0 text-center font-nunito font-black">{{metadata.title}}</h1>

{# List every content page in the project #}
<ul class="mt-16 bg-sky-800/25 p-4 text-xs leading-loose">
	<li><code>* ALL CONTENT *</code></li>
	{%- for entry in collections.all %}
	<li><a href="{{ entry.url }}" class="hover:underline"><code>{{ entry.url }}</code></a></li>
	{%- endfor %}
</ul>

<div class="divide-y">
  {% for post in posts %}
		<article class="pt-16 pb-4">
			<section class="prose-sm sm:prose">
				<a href="{{ post.url }}"><h1 class="inline">{{ post.data.title }}</h1></a>
				{{ post.content | safe }}
			</section>
		</article>
	{% endfor %}
</div>

{# Pagination Navigation #}
{%- if pagination.previousPageLink or pagination.nextPageLink %}
<ul class="mb-8 grid grid-cols-3 items-center mt-8 border p-2 gap-2 text-sm font-bold">
	<li>{%- if pagination.previousPageLink %}<a class="hover:underline" href="{% if pagination.pageNumber == 1 %}/{% else %}{{ pagination.previousPageLink }}{% endif %}">← Newer posts</a>{% endif %}</li>
  <li class="font-normal text-xs text-center">Page {{ pagination.pageNumber + 1 }} of {{ pagination.pages.length }}</li>
	<li class="text-right">{%- if pagination.nextPageLink %}<a class="hover:underline" href="{{ pagination.nextPageLink }}">Older posts →</a>{% endif %}</li>
</ul>
{%- endif %}